{{#section "css"}}
<link rel="stylesheet" href="/static/css/account/rating.css">
{{/section}}

<div class="container mt-4 mb-5">
  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="javascript:history.back()" class="text-decoration-none d-flex align-items-center gap-2">
          <i class="bi bi-arrow-left"></i> Back
        </a>
      </li>
      <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Bidder Ratings</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="rating-header mb-4">
    <h1 class="h3 fw-bold mb-2">
      <i class="bi bi-star-fill me-3"></i>{{bidderName}}'s Ratings
    </h1>
    <p class="mb-0 opacity-75">View rating score and detailed reviews from sellers</p>
  </div>

  <!-- Rating Overview & Reviews -->
  {{> rating-details emptyMessage="This bidder hasn't received any reviews from sellers."}}
</div>