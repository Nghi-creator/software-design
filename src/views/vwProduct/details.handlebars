<div class="modal fade" id="bidModal" tabindex="-1" aria-labelledby="bidModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header border-0 pb-2"
        style="background: linear-gradient(135deg, #72AEC8 0%, #5a9bb8 100%); color: white;">
        <h5 class="modal-title fw-bold d-flex align-items-center" id="bidModalLabel">
          <i class="bi bi-hammer me-2" style="font-size: 1.2rem;"></i>
          <span>Place Your Bid</span>
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body px-4 py-4">
        <div class="alert border-0 mb-4"
          style="background: linear-gradient(135deg, rgba(114, 174, 200, 0.15) 0%, rgba(114, 174, 200, 0.05) 100%); border-left: 4px solid #72AEC8 !important;">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <i class="bi bi-cash-coin me-2" style="color: #72AEC8; font-size: 1.5rem;"></i>
              <div>
                <small class="text-muted d-block" style="font-size: 0.75rem;">Current Price</small>
                <strong class="fs-5" style="color: #72AEC8;">
                  <span id="modalCurrentPrice">{{format_number product.current_price}}</span> VND
                </strong>
              </div>
            </div>
          </div>
        </div>

        <form id="bidForm" action="/products/bid" method="POST">
          <input type="hidden" name="productId" value="{{product.id}}">
          <input type="hidden" name="bidAmount" id="bidAmountRaw" value="">

          <div class="mb-4">
            <label for="bidAmount" class="form-label fw-bold mb-3">
              <i class="bi bi-tag me-2" style="color: #72AEC8;"></i>Your Maximum Bid Amount
            </label>
            <div class="input-group input-group-lg shadow-sm">
              <button type="button" class="btn btn-outline-secondary" id="decreaseBid"
                style="border-color: #dee2e6; width: 50px; transition: all 0.3s;"
                title="Decrease by 1 step (Hold for continuous)">
                <i class="bi bi-dash-lg" style="font-weight: bold;"></i>
              </button>
              <input type="text" class="form-control text-center fw-bold" id="bidAmount" placeholder="Enter bid amount"
                required autofocus inputmode="numeric" pattern="[0-9,]*"
                style="font-size: 1.5rem; color: #72AEC8; border-left: 0; border-right: 0;" readonly>
              <button type="button" class="btn btn-outline-secondary" id="increaseBid"
                style="border-color: #dee2e6; width: 50px; transition: all 0.3s;"
                title="Increase by 1 step (Hold for continuous)">
                <i class="bi bi-plus-lg" style="font-weight: bold;"></i>
              </button>
              <span class="input-group-text" style="background-color: #f8f9fa; font-weight: 600; color: #495057;">
                VND
              </span>
            </div>

            <!-- Quick Increment Buttons -->
            <div class="d-flex gap-2 mt-3 justify-content-center">
              <button type="button" class="btn btn-sm btn-outline-primary quick-increment" data-multiplier="5"
                style="transition: all 0.3s; font-size: 0.85rem;">
                <i class="bi bi-arrow-up-circle"></i> +5x
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary quick-increment" data-multiplier="10"
                style="transition: all 0.3s; font-size: 0.85rem;">
                <i class="bi bi-arrow-up-circle-fill"></i> +10x
              </button>
              <button type="button" class="btn btn-sm btn-outline-danger quick-decrement" data-multiplier="5"
                style="transition: all 0.3s; font-size: 0.85rem;">
                <i class="bi bi-arrow-down-circle"></i> -5x
              </button>
              <button type="button" class="btn btn-sm btn-outline-danger quick-decrement" data-multiplier="10"
                style="transition: all 0.3s; font-size: 0.85rem;">
                <i class="bi bi-arrow-down-circle-fill"></i> -10x
              </button>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
              <small class="text-muted">
                <i class="bi bi-arrow-up-down me-1" style="color: #72AEC8;"></i>
                Step: <strong>{{format_number product.step_price}}</strong> VND
              </small>
              <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                Hold +/- for continuous
              </small>
            </div>
          </div>

          <!-- Confirmation Checkbox -->
          <div class="form-check mb-3 p-3 rounded d-flex align-items-start"
            style="background: linear-gradient(135deg, rgba(114, 174, 200, 0.15) 0%, rgba(114, 174, 200, 0.05) 100%); border-left: 4px solid #72AEC8 !important;">
            <input class="form-check-input flex-shrink-0 mt-1" type="checkbox" id="confirmBidCheckbox" required
              style="width: 1.25em; height: 1.25em; cursor: pointer; border-color: #72AEC8;">
            <label class="form-check-label ms-3" for="confirmBidCheckbox" style="cursor: pointer; line-height: 1.5;">
              <i class="bi bi-shield-check me-1" style="color: #72AEC8;"></i>
              <span class="fw-semibold" style="color: #5a9bb8;">I confirm to place this maximum bid</span>
              <small class="d-block text-muted mt-1">
                By checking this box, you agree to the auction terms
              </small>
            </label>
          </div>

