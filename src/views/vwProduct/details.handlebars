{{#section "css"}}
<link rel="stylesheet" href="/static/css/product/detail.css">
{{/section}}

{{#section "js"}}
<script src="/static/js/product/detail.js"></script>
<script src="/static/js/product/bid.js"></script>
<script src="/static/js/product/comment.js"></script>
<script src="/static/js/product/seller-actions.js"></script>
<script src="/static/js/product/ratings-modal.js"></script>
<script src="/static/js/product/smart-countdown.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 1. Configuration
    const galleryImages = [
      {{ #if product.thumbnail }}'/static/{{product.thumbnail}}'{{ else}}'https://placehold.co/800x800?text=Image+1'{{/if}},
  { { #each product.sub_images } } '/static/{{this}}', {{/each }}
    ];

  const config = {
    productId: {{ product.id }},
  currentPrice: { { product.current_price } },
  minIncrement: { { product.step_price } },
  isAuthenticated: { { #if isAuthenticated } } true{ {else } } false{ {/if } }
    };

  // 2. Init Modules
  initProductUI({ galleryImages });
  initBidding({
    productId: config.productId,
    currentPrice: config.currentPrice,
    minIncrement: config.minIncrement,
    isAuthenticated: config.isAuthenticated
  });
  initComments();

  { { #if(and isAuthenticated(eq authUser.id product.seller_id)) } }
  initSellerActions(config.productId);
  { {/if } }

  { { #if(eq productStatus "ACTIVE") } }
  initSmartCountdown();
  { {/if } }
  });
</script>
{{/section}}

<div class="container mb-5">
  <!-- Flash Messages -->
  {{> alerts}}

  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="javascript:history.back()" class="text-decoration-none d-flex align-items-center gap-2">
          <i class="bi bi-arrow-left"></i> Back
        </a>
      </li>
      <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
      <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Category</a></li>
      <li class="breadcrumb-item active" aria-current="page">Product Detail</li>
    </ol>
  </nav>

  <div class="row">
    <!-- Product Image Section -->
    <div class="col-lg-5 mb-4 mb-lg-0">
      <div class="product-image-wrapper">
        <div class="main-image-container position-relative" onclick="openLightbox(0)" style="cursor: pointer;">
          {{#if product.thumbnail}}
          <img id="mainImage" src="/static/{{product.thumbnail}}" alt="{{product.name}}"
            class="img-fluid main-product-image">
          {{else}}
          <img id="mainImage" src="https://placehold.co/500x500?text=No+Image" class="img-fluid main-product-image">
          {{/if}}

          {{#if product.is_new}}
          <div class="position-absolute top-0 start-0 m-3">
            <span class="badge bg-success fs-6 px-3 py-2">
              <i class="bi bi-lightning-fill"></i> New
            </span>
          </div>
          {{/if}}

          <!-- Zoom Icon - Positioned to not be covered by image -->
          <div class="position-absolute top-0 end-0 m-3">
            <span class="badge bg-dark" style="opacity: 0.7; cursor: pointer;">
              <i class="bi bi-arrows-fullscreen"></i>
            </span>
          </div>
        </div>

        <!-- Image Gallery -->
        <div class="image-gallery mt-3">
          <div class="gallery-container position-relative">
            <div class="gallery-track">
              <div class="gallery-thumb active" onclick="changeMainImage(this, 0)">
                {{#if product.thumbnail}}
                <img src="/static/{{product.thumbnail}}" alt="Thumb 1" class="w-100 h-100 rounded-2"
                  style="object-fit: cover;">
                {{else}}
                <img src="https://placehold.co/150x150?text=Image+1" alt="Thumb 1" class="w-100 h-100 rounded-2"
                  style="object-fit: cover;">
                {{/if}}
              </div>
              {{#each product.sub_images}}
              <div class="gallery-thumb" onclick="changeMainImage(this, {{@index}} + 1)">
                <img src="/static/{{this}}" alt="Thumb {{@index}}" class="w-100 h-100 rounded-2"
                  style="object-fit: cover;">
              </div>
              {{/each}}
            </div>

            <!-- Gallery Navigation Buttons -->
            <button class="gallery-nav gallery-nav-prev" onclick="galleryPrev()" title="Previous">
              <i class="bi bi-chevron-left"></i>
            </button>
            <button class="gallery-nav gallery-nav-next" onclick="galleryNext()" title="Next">
              <i class="bi bi-chevron-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Product Details Section -->
    <div class="col-lg-7">
      <!-- Product Title & Category -->
      <div class="mb-4">
        <div class="mb-3 d-flex gap-2 align-items-center flex-wrap">
          <span class="badge-premium">
            <i class="bi bi-gem"></i> Featured Auction
          </span>
          {{#if product.allow_unrated_bidder}}
          <span class="badge-premium"
            style="background: linear-gradient(135deg, rgba(114, 174, 200, 0.15) 0%, rgba(90, 154, 184, 0.1) 100%); border: 2px solid rgba(114, 174, 200, 0.3); color: #72AEC8;">
            <i class="bi bi-person-check"></i> Allow Unrated Bidders
          </span>
          {{/if}}
        </div>
        <h1 class="display-5 fw-bold gradient-text mb-3" style="text-shadow: 0 4px 20px rgba(114, 174, 200, 0.3);">
          {{product.name}}
        </h1>

        {{!-- Product Status Badge --}}
        {{#if productStatus}}
        {{#if (eq productStatus "ACTIVE")}}
        <span class="badge bg-success mb-3" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
          <i class="bi bi-circle-fill" style="font-size: 0.6rem;"></i> Active Auction
        </span>
        {{else if (eq productStatus "PENDING")}}
        <span class="badge bg-warning text-dark mb-3" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
          <i class="bi bi-clock-fill"></i> Pending Payment
        </span>
        {{else if (eq productStatus "SOLD")}}
        <span class="badge bg-primary mb-3" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
          <i class="bi bi-check-circle-fill"></i> Sold
        </span>
        {{else if (eq productStatus "EXPIRED")}}
        <span class="badge bg-secondary mb-3" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
          <i class="bi bi-x-circle-fill"></i> Expired - No Bidders
        </span>
        {{else if (eq productStatus "CANCELLED")}}
        <span class="badge bg-danger mb-3" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
          <i class="bi bi-ban-fill"></i> Cancelled
        </span>
        {{/if}}
        {{/if}}

        <div class="d-flex align-items-center gap-3 flex-wrap">
          <span class="text-muted small">
            <i class="bi bi-calendar3"></i> Posted on {{format_date product.created_at}}
          </span>
        </div>
      </div>

      <hr class="my-4" style="border-top: 2px solid #e9ecef;">

      <!-- Price Section -->
      <div class="price-section mb-5">
        <div class="row g-3">
          <div class="col-md-6">
            <div
              class="price-card p-4 rounded-4 bg-gradient-light border-0 h-100 d-flex flex-column justify-content-center">
              <small class="text-muted d-block mb-2 fw-500">Current Bid</small>
              <div class="d-flex align-items-baseline gap-2">
                <h2 class="fw-bold text-primary mb-0" style="color: #72AEC8 !important;">{{format_number
                  product.current_price}}</h2>
                <span class="text-muted">VND</span>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div
              class="price-card price-card-buy-now p-4 rounded-4 border-0 h-100 d-flex flex-column justify-content-center">
              <small class="text-muted d-block mb-2 fw-500">Buy Now Price</small>
              {{#if product.buy_now_price}}
              <div class="d-flex align-items-baseline gap-2">
                <h2 class="fw-bold mb-0" style="color: #72AEC8;">{{format_number product.buy_now_price}}</h2>
                <span class="text-muted">VND</span>
              </div>
              {{else}}
              <div class="d-flex align-items-baseline gap-2">
                <h2 class="fw-bold text-muted mb-0">N/A</h2>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <!-- Auction Info -->
      <div class="auction-info mb-5">
        <div class="row g-3">
          <div class="col-md-4">
            <div
              class="info-box p-4 rounded-3 border bg-white text-center h-100 d-flex flex-column justify-content-center">
              <div class="mb-3">
                <i class="bi bi-hourglass-split" style="font-size: 1.8rem; color: #dc3545;"></i>
              </div>
              <small class="text-muted d-block mb-2">
                {{#if (should_show_relative_time product.end_at)}}
                Time Left
                {{else}}
                Ends at
                {{/if}}
              </small>
              <h5 class="fw-bold countdown-timer" data-end-date="{{product.end_at}}" {{#unless
                (should_show_relative_time product.end_at)}}style="color: #72AEC8;" {{/unless}}>
                {{#if (should_show_relative_time product.end_at)}}
                <span class="text-danger">{{format_time_remaining product.end_at}}</span>
                {{else}}
                <!-- Placeholder for end date/time - will be filled by JS -->
                {{/if}}
              </h5>
            </div>
          </div>
          <div class="col-md-4">
            <div
              class="info-box p-4 rounded-3 border bg-white text-center h-100 d-flex flex-column justify-content-center">
              <div class="mb-3">
                <i class="bi bi-fire" style="font-size: 1.8rem; color: #ffc107;"></i>
              </div>
              <small class="text-muted d-block mb-2">Total Bids</small>
              <h5 class="fw-bold text-warning">{{product.bid_count}}</h5>
            </div>
          </div>
          <div class="col-md-4">
            <div
              class="info-box p-4 rounded-3 border bg-white text-center h-100 d-flex flex-column justify-content-center">
              <div class="mb-3">
                <i class="bi bi-person-check" style="font-size: 1.8rem; color: #198754;"></i>
              </div>
              {{#if product.is_buy_now_purchase}}
              <small class="text-muted d-block mb-2">Purchased By</small>
              {{#if product.bidder_name}}
              <h5 class="fw-bold text-success" style="font-size: 0.9rem;">
                {{product.bidder_name}}
                <span class="badge bg-info text-dark ms-1" style="font-size: 0.7rem;">
                  <i class="bi bi-lightning-fill"></i> Buy Now
                </span>
              </h5>
              {{else}}
              <h5 class="fw-bold text-muted">-</h5>
              {{/if}}
              {{else}}
              <small class="text-muted d-block mb-2">Highest Bidder</small>
              {{#if product.bidder_name}}
              <h5 class="fw-bold text-success" style="font-size: 0.9rem;">{{product.bidder_name}}</h5>
              {{else}}
              <h5 class="fw-bold text-muted">No bids yet</h5>
              {{/if}}
              {{/if}}
              {{#if product.bidder_name}}
              <hr class="my-2">
              <small class="text-muted">
                Rating:
                {{#if bidder_has_reviews}}
                {{#if (eq bidder_rating_point 1)}}
                <span class="fw-bold" style="color: #667eea;">
                  <i class="bi bi-award-fill text-warning"></i> 100.00%
                </span>
                {{else}}
                <span class="fw-bold" style="color: #667eea;">
                  <i class="bi bi-award-fill text-warning"></i> {{#if (gt bidder_rating_point 0)}}{{round (multiply
                  bidder_rating_point 100) 2}}{{else}}0.00{{/if}}%
                </span>
                {{/if}}
                {{else}}
                <span class="text-muted">No rating yet</span>
                {{/if}}
              </small>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons mb-4">
        <div class="d-grid gap-2 d-md-flex">

          {{!-- PENDING: Show Payment Button for Highest Bidder and Seller --}}
          {{#if (eq productStatus "PENDING")}}
          {{#if showPaymentButton}}
          <a href="/products/complete-order?id={{product.id}}" class="btn btn-lg flex-fill fw-bold btn-success">
            <i class="bi bi-credit-card"></i> Go to Payment
          </a>
          {{else}}
          <button class="btn btn-lg flex-fill fw-bold" disabled>
            <i class="bi bi-lock-fill"></i> Auction Ended - Pending Payment
          </button>
          {{/if}}

          {{!-- SOLD/EXPIRED/CANCELLED: Disable All Actions --}}
          {{else if (or (eq productStatus "SOLD") (eq productStatus "EXPIRED") (eq productStatus "CANCELLED"))}}
          <button class="btn btn-lg flex-fill fw-bold" disabled>
            {{#if (eq productStatus "SOLD")}}
            <i class="bi bi-check-circle-fill"></i> Product Sold
            {{else if (eq productStatus "EXPIRED")}}
            <i class="bi bi-x-circle-fill"></i> Auction Expired
            {{else}}
            <i class="bi bi-ban-fill"></i> Auction Cancelled
            {{/if}}
          </button>

          {{!-- ACTIVE: Normal Bidding --}}
          {{else}}
          {{!-- Nút Place Bid --}}
          <button class="btn btn-lg flex-fill fw-bold btn-place-bid" {{#if (and isAuthenticated (eq authUser.id
            product.seller_id))}}disabled{{/if}}>
            <i class="bi bi-hammer"></i> Place Bid
          </button>
          {{#if isAuthenticated}}
          {{#if product.is_favorite}}
          <form action="/products/watchlist?_method=DELETE" method="POST" class="flex-fill">
            <input type="hidden" name="productId" value="{{product.id}}">
            <button type="submit" class="btn btn-lg w-100 fw-bold btn-watch text-danger" title="Remove from Watchlist">
              <i class="bi bi-heart-fill"></i> Watching
            </button>
          </form>

          {{else}}
          {{!-- TRƯỜNG HỢP 2: CHƯA THÍCH -> Form POST --}}
          <form action="/products/watchlist" method="POST" class="flex-fill">
            <input type="hidden" name="productId" value="{{product.id}}">
            <button type="submit" class="btn btn-lg w-100 fw-bold btn-watch" title="Add to Watchlist">
              <i class="bi bi-heart"></i> Watch
            </button>
          </form>
          {{/if}}

          {{else}}
          {{!--
          TRƯỜNG HỢP 3: CHƯA ĐĂNG NHẬP
          Giữ nguyên giao diện nút nhưng chuyển thành thẻ <a> để dẫn tới trang signin
            --}}
            <a href="/account/signin?retUrl=/products/detail/{{product.id}}"
              class="btn btn-lg flex-fill fw-bold btn-watch d-flex align-items-center justify-content-center text-decoration-none">
              <i class="bi bi-heart me-2"></i> Watch
            </a>
            {{/if}}
            {{/if}}

        </div>
      </div>

      {{!-- Buy Now Button - Only for ACTIVE --}}
      {{#if (and product.buy_now_price (eq productStatus "ACTIVE"))}}
      <div class="d-grid mb-4">
        <button class="btn btn-lg fw-bold btn-buy-now" data-product-id="{{product.id}}"
          data-buy-now-price="{{product.buy_now_price}}" {{#if (and isAuthenticated (eq authUser.id
          product.seller_id))}}disabled{{/if}}>
          <i class="bi bi-check-circle"></i> Buy Now
        </button>
      </div>
      {{/if}}

      {{!-- Combined seller message --}}
      {{#if (and isAuthenticated (eq authUser.id product.seller_id) (eq productStatus "ACTIVE"))}}
      <div class="text-center mb-3">
        <small class="text-muted">
          <i class="bi bi-info-circle"></i> You cannot
          {{#if product.buy_now_price}}bid and buy{{else}}bid on{{/if}} your own product
        </small>
      </div>
      {{/if}}

      <hr class="my-4" style="border-top: 2px solid #e9ecef;">

      <!-- Seller Info -->
      <div class="seller-info p-4 rounded-4 border bg-white">
        <h6 class="fw-bold mb-3">
          <i class="bi bi-shop" style="color: #72AEC8;"></i> Seller Information
        </h6>
        <h5 class="fw-bold mb-2">{{product.seller_name}}</h5>

        <small class="text-success d-block mb-2">
          <i class="bi bi-check-circle-fill"></i> Verified Seller
        </small>

        {{#if seller_has_reviews}}
        {{#if (eq seller_rating_point 1)}}
        <a href="/products/seller/{{product.seller_id}}/ratings" class="text-decoration-none">
          <small class="text-muted d-block mb-2" style="cursor: pointer; transition: color 0.2s;"
            onmouseover="this.style.color='#72AEC8'" onmouseout="this.style.color=''" title="View seller ratings">
            <i class="bi bi-award-fill text-warning"></i> 100.00% <i class="bi bi-chevron-right ms-1"></i>
          </small>
        </a>
        {{else}}
        <a href="/products/seller/{{product.seller_id}}/ratings" class="text-decoration-none">
          <small class="text-muted d-block mb-2" style="cursor: pointer; transition: color 0.2s;"
            onmouseover="this.style.color='#72AEC8'" onmouseout="this.style.color=''" title="View seller ratings">
            <i class="bi bi-award-fill text-warning"></i> {{#if (gt seller_rating_point 0)}}{{round (multiply
            seller_rating_point 100) 2}}{{else}}0.00{{/if}}% <i class="bi bi-chevron-right ms-1"></i>
          </small>
        </a>
        {{/if}}
        {{else}}
        <small class="text-muted d-block mb-2">
          <i class="bi bi-award text-muted"></i> No rating yet
        </small>
        {{/if}}

        <small class="text-muted d-block">
          <i class="bi bi-calendar3"></i> Member since {{format_date product.seller_created_at}}
        </small>
      </div>
    </div>
  </div>

  <!-- Product Description Section -->
  <div class="row mt-5">
    <div class="col-lg-8">
      <div class="description-section bg-white p-5 rounded-4 border mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4" onclick="toggleDescription()"
          style="cursor: pointer;">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-file-text" style="color: #72AEC8;"></i> Product Description
          </h3>
          <button id="descriptionToggle" class="btn btn-link p-0" style="color: #72AEC8; text-decoration: none;">
            <i class="bi bi-chevron-up"></i>
          </button>
        </div>
        <div id="descriptionContent">
          <p class="text-muted" style="line-height: 1.8; font-size: 1.05rem;">
            {{#if product.description}}
            {{{product.description}}}
            {{else}}
            <em>No description provided for this product.</em>
            {{/if}}
          </p>

          {{!-- Description Updates --}}
          {{#if descriptionUpdates}}
          {{#each descriptionUpdates}}
          <div class="mt-4 p-3 border-start border-3 border-warning bg-light rounded">
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-pencil-square text-warning me-2"></i>
              <strong class="text-warning">{{format_date this.created_at}}</strong>
            </div>
            <div class="text-muted" style="line-height: 1.8;">
              {{{this.content}}}
            </div>
          </div>
          {{/each}}
          {{/if}}
        </div>
      </div>

      <!-- Product Details Tab -->
      <div class="details-section bg-white p-5 rounded-4 border mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4" onclick="toggleDetails()"
          style="cursor: pointer;">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-info-circle" style="color: #72AEC8;"></i> Product Details
          </h3>
          <button id="detailsToggle" class="btn btn-link p-0" style="color: #72AEC8; text-decoration: none;">
            <i class="bi bi-chevron-up"></i>
          </button>
        </div>
        <div id="detailsContent">
          <div class="table-responsive">
            <table class="table table-borderless">
              <tbody>
                {{!-- <tr class="border-bottom"> --}}
                  {{!-- <td class="fw-bold text-muted" style="width: 30%;">Product ID</td> --}}
                  {{!-- <td class="fw-500"> --}}
                    {{!-- product id --}}
                    {{!-- </td> --}}
                  {{!-- </tr> --}}
                <tr class="border-bottom">
                  <td class="fw-bold text-muted">Category</td>
                  <td class="fw-500">{{product.category_name}}</td>
                </tr>
                <tr class="border-bottom">
                  <td class="fw-bold text-muted">Auction Start</td>
                  <td class="fw-500">{{format_date product.created_at}}</td>
                </tr>
                <tr class="border-bottom">
                  <td class="fw-bold text-muted">Auction End</td>
                  <td class="fw-500">{{format_date product.end_at}}</td>
                </tr>
                <tr>
                  <td class="fw-bold text-muted">Starting Price</td>
                  <td class="fw-bold" style="color: #72AEC8;">{{format_number product.starting_price}} VND</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Comments Section -->
      <div id="comments" class="comments-section bg-white p-5 rounded-4 border">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-chat-dots" style="color: #72AEC8;"></i> Questions & Answers
          </h3>
        </div>

        {{#if isAuthenticated}}
        {{#if (ne authUser.id product.seller_id)}}
        <!-- Comment Form - Only for ACTIVE products -->
        {{#if (eq productStatus "ACTIVE")}}
        <div class="comment-form mb-4">
          <form action="/products/comment" method="POST">
            <input type="hidden" name="productId" value="{{product.id}}">
            <div class="mb-3">
              <textarea class="form-control" name="content" rows="3" placeholder="Ask a question about this product..."
                required maxlength="500"></textarea>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-primary" style="background-color: #72AEC8; border: none;">
                <i class="bi bi-send me-2"></i>Post Question
              </button>
            </div>
          </form>
        </div>
        <hr class="my-4">
        {{else}}
        <div class="alert alert-secondary mb-4">
          <i class="bi bi-lock-fill me-2"></i>
          Comments are disabled for this auction.
        </div>
        {{/if}}
        {{/if}}
        {{else}}
        {{#if (eq productStatus "ACTIVE")}}
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          <a href="/account/signin?retUrl=/products/detail?id={{product.id}}" class="alert-link">Signin</a> to ask
          questions about this product
        </div>
        {{/if}}
        {{/if}}

        <!-- Comments List -->
        {{#if comments.length}}
        <div class="comments-list">
          {{#each comments}}
          <div class="comment-item mb-4 pb-4 border-bottom">
            <div class="d-flex align-items-start">
              <div class="flex-shrink-0 me-3">
                <div class="rounded-circle bg-primary bg-opacity-10 p-2"
                  style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                  <i class="bi bi-person-fill" style="color: #667eea; font-size: 1.5rem;"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <strong>{{user_name}}</strong>
                    {{#if (eq user_role 'seller')}}
                    {{!-- <span class="badge bg-success ms-2">Seller</span> --}}
                    {{/if}}
                    <br>
                    <small class="text-muted">{{format_date created_at}}</small>
                  </div>
                </div>
                <p class="mb-2">{{content}}</p>

                {{!-- Only show reply button if current user is the seller of this product, not replying to themselves,
                and the question hasn't been answered yet --}}
                {{#if (and ../isAuthenticated (eq ../authUser.role 'seller') (eq ../product.seller_id ../authUser.id)
                (ne user_id ../authUser.id) (eq replies.length 0))}}
                <button class="btn btn-sm reply-btn" data-comment-id="{{id}}" data-user-name="{{user_name}}"
                  style="background-color: #72AEC8; color: white; border: none; border-radius: 6px; padding: 4px 12px; font-weight: 500; transition: all 0.3s ease;">
                  <i class="bi bi-reply me-1"></i>Reply
                </button>

                <!-- Reply Form (Hidden by default) -->
                <div class="reply-form mt-3" id="reply-form-{{id}}" style="display: none;">
                  <form action="/products/comment" method="POST">
                    <input type="hidden" name="productId" value="{{../product.id}}">
                    <input type="hidden" name="parentId" value="{{id}}">
                    <div class="mb-2 reply-textarea-wrapper">
                      <div class="form-control form-control-sm reply-input" contenteditable="true"
                        data-comment-id="{{id}}" placeholder="Write a reply..."
                        style="min-height: 50px; max-height: 200px; overflow-y: auto; white-space: pre-wrap; word-wrap: break-word;">
                      </div>
                      <input type="hidden" name="content" class="reply-content-hidden" value="">
                    </div>
                    <div class="text-end">
                      <button type="button" class="btn btn-sm btn-secondary cancel-reply" data-comment-id="{{id}}"
                        style="min-width: 80px; padding: 6px 16px; height: 32px;">Cancel</button>
                      <button type="submit" class="btn btn-sm btn-primary reply-submit"
                        style="background-color: #72AEC8; border: none; min-width: 80px; padding: 6px 16px; height: 32px;">Reply</button>
                    </div>
                  </form>
                </div>
                {{/if}}
              </div>
            </div>
          </div>

          {{!-- Display replies --}}
          {{#if replies.length}}
          {{#each replies}}
          <div class="comment-item mb-4 pb-4 border-bottom">
            <div class="d-flex align-items-start">
              <div class="flex-shrink-0 me-3">
                <div class="rounded-circle reply-avatar p-2"
                  style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; background: #fff; border: 3px solid #72AEC8;">
                  <i class="bi bi-person-fill" style="color: #72AEC8; font-size: 1.5rem;"></i>
                </div>
              </div>
              <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <strong>{{user_name}}</strong>
                    {{#if (eq user_role 'seller')}}
                    {{!-- <span class="badge bg-success ms-2">Seller</span> --}}
                    {{/if}}
                    {{#if (eq user_id ../../product.seller_id)}}
                    <span class="badge bg-success ms-2">
                      <i class="bi bi-star-fill"></i> Seller
                    </span>
                    {{/if}}
                    <br>
                    <small class="text-muted">{{format_date created_at}}</small>
                  </div>
                </div>
                <p class="mb-0">{{content}}</p>
              </div>
            </div>
          </div>
          {{/each}}
          {{/if}}
          {{/each}}
        </div>

        <!-- Pagination -->
        {{#if (gt totalPages 1)}}
        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
          <div class="text-muted">
            <small><i class="bi bi-chat-dots-fill me-1" style="color: #72AEC8;"></i>Page
              <strong>{{commentPage}}</strong> of <strong>{{totalPages}}</strong> </small>
          </div>
          <nav aria-label="Comments pagination">
            <ul class="pagination pagination-sm mb-0" style="gap: 5px;">
              {{#if (gt commentPage 1)}}
              <li class="page-item">
                <a class="page-link rounded-3"
                  href="/products/detail?id={{product.id}}&commentPage={{subtract commentPage 1}}#comments"
                  aria-label="Previous"
                  style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 12px; transition: all 0.3s;">
                  <i class="bi bi-chevron-left"></i>
                </a>
              </li>
              {{else}}
              <li class="page-item disabled">
                <span class="page-link rounded-3" style="border: 2px solid #e9ecef; color: #ccc; padding: 8px 12px;">
                  <i class="bi bi-chevron-left"></i>
                </span>
              </li>
              {{/if}}

              {{#each (range 1 (add totalPages 1))}}
              {{#if (eq this ../commentPage)}}
              <li class="page-item active">
                <span class="page-link rounded-3"
                  style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: none; color: white; font-weight: 600; padding: 8px 14px; box-shadow: 0 2px 8px rgba(114, 174, 200, 0.3);">{{this}}</span>
              </li>
              {{else}}
              <li class="page-item">
                <a class="page-link rounded-3"
                  href="/products/detail?id={{../product.id}}&commentPage={{this}}#comments"
                  style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 14px; transition: all 0.3s;">{{this}}</a>
              </li>
              {{/if}}
              {{/each}}

              {{#if (lt commentPage totalPages)}}
              <li class="page-item">
                <a class="page-link rounded-3"
                  href="/products/detail?id={{product.id}}&commentPage={{add commentPage 1}}#comments" aria-label="Next"
                  style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 12px; transition: all 0.3s;">
                  <i class="bi bi-chevron-right"></i>
                </a>
              </li>
              {{else}}
              <li class="page-item disabled">
                <span class="page-link rounded-3" style="border: 2px solid #e9ecef; color: #ccc; padding: 8px 12px;">
                  <i class="bi bi-chevron-right"></i>
                </span>
              </li>
              {{/if}}
            </ul>
          </nav>
        </div>
        {{/if}}
        {{else}}
        <div class="text-center text-muted py-5">
          <i class="bi bi-chat-dots" style="font-size: 3rem; opacity: 0.3;"></i>
          <p class="mt-3">No questions yet. Be the first to ask!</p>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="sticky-sidebar">
        <!-- Bidding History Section -->
        <div class="bidding-history-section bg-white p-4 rounded-4 border">
          <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom flex-nowrap">
            <h5 class="fw-bold mb-0 me-2" style="white-space: nowrap;">
              <i class="bi bi-clock-history" style="color: #72AEC8;"></i> Bidding History
            </h5>
            {{#if isAuthenticated}}
            <a href="/products/bidding-history?id={{product.id}}" class="btn btn-sm fw-bold flex-shrink-0"
              style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: none; color: white;">
              <i class="bi bi-list-ul me-1"></i>View Full
            </a>
            {{else}}
            <a href="/account/signin?retUrl=/products/bidding-history?id={{product.id}}"
              class="btn btn-outline-primary flex-shrink-0">
              <span class="btn-text"><i class="bi bi-lock-fill me-1"></i>Signin</span>
            </a>
            {{/if}}
          </div>

          {{#if isAuthenticated}}
          {{#if biddingHistory.length}}
          <div class="bidding-list" style="max-height: 400px; overflow-y: auto;">
            {{#each biddingHistory}}
            <div
              class="bid-item p-3 mb-2 rounded border-start border-3 {{#if @first}}border-success bg-success bg-opacity-10{{else}}border-secondary bg-light{{/if}}"
              data-bidder-id="{{this.bidder_id}}" data-bidder-name="{{this.bidder_name}}">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="d-flex align-items-center gap-2">
                  <i class="bi bi-person-circle me-2 text-muted"></i>
                  <a href="/products/bidder/{{this.bidder_id}}/ratings" class="text-decoration-none"
                    style="color: inherit;">
                    <strong class="small bidder-name-link">{{this.bidder_name}}</strong>
                  </a>
                  {{#if @first}}
                  <span class="badge bg-success" style="font-size: 0.7rem;">Latest</span>
                  {{/if}}
                  {{#if this.is_buy_now}}
                  <span class="badge bg-info text-dark" style="font-size: 0.7rem;">
                    <i class="bi bi-lightning-fill"></i> Buy Now
                  </span>
                  {{/if}}
                </div>
                <div class="d-flex align-items-center gap-1">
                  {{!-- Show reject button only for seller and ACTIVE products --}}
                  {{#if @root.isAuthenticated}}
                  {{#if (eq @root.product.seller_id @root.authUser.id)}}
                  {{#if (eq @root.productStatus "ACTIVE")}}
                  <button class="btn btn-sm btn-danger reject-bidder-btn" data-bidder-id="{{this.bidder_id}}"
                    data-bidder-name="{{this.bidder_name}}" style="padding: 2px 8px; font-size: 0.7rem;"
                    title="Reject this bidder">
                    <i class="bi bi-x-circle"></i>
                  </button>
                  {{/if}}
                  {{/if}}
                  {{/if}}
                </div>
              </div>
              <div class="fw-bold {{#if this.is_buy_now}}text-info{{else}}text-success{{/if}} mb-1">{{format_number
                this.current_price}} VND</div>
              <div class="text-muted" style="font-size: 0.75rem;">
                <i class="bi bi-clock me-1"></i>{{format_date this.created_at}}
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center text-muted py-4">
            <i class="bi bi-clock-history" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="mt-3 small">No bids placed yet</p>
          </div>
          {{/if}}
          {{else}}
          <div class="text-center text-muted py-4">
            <i class="bi bi-lock" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="mt-3 small">Sign in to view bidding history</p>
          </div>
          {{/if}}
        </div>

        {{!-- Rejected Bidders Section - Only visible to seller for ACTIVE products --}}
        {{#if (and isAuthenticated (eq product.seller_id authUser.id) (eq productStatus "ACTIVE"))}}
        {{#if rejectedBidders.length}}
        <div class="rejected-bidders-section bg-white p-4 rounded-4 border mt-3">
          <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom flex-nowrap">
            <h5 class="fw-bold mb-0 me-2" style="white-space: nowrap;">
              <i class="bi bi-person-x" style="color: #dc3545;"></i> Rejected Bidders
            </h5>
          </div>
          <div class="rejected-list" style="max-height: 300px; overflow-y: auto;">
            {{#each rejectedBidders}}
            <div class="rejected-item p-3 mb-2 rounded border-start border-3 border-danger bg-danger bg-opacity-10">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="d-flex align-items-center gap-2">
                  <i class="bi bi-person-circle me-2 text-muted"></i>
                  <strong class="small">{{this.bidder_name}}</strong>
                </div>
                <button class="btn btn-sm btn-success unreject-bidder-btn" data-bidder-id="{{this.bidder_id}}"
                  data-bidder-name="{{this.bidder_name}}" style="padding: 2px 8px; font-size: 0.7rem;"
                  title="Allow this bidder to bid again">
                  <i class="bi bi-check-circle"></i>
                </button>
              </div>
              <div class="text-muted" style="font-size: 0.75rem;">
                <i class="bi bi-clock me-1"></i>{{format_date this.rejected_at}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
        {{/if}}
      </div> {{!-- End sticky-sidebar --}}
    </div>
  </div>

  <!-- Related Products Section -->
  <div class="row mt-5">
    <div class="col-12">
      <h3 class="fw-bold mb-4">
        <i class="bi bi-box-seam" style="color: #72AEC8;"></i> Related Products
      </h3>
      <div class="related-section">
        <div class="row g-4">
          <!-- Related Product Card -->
          {{#each related_products}}
          <div class="col-md-3">
            <a href="/products/detail?id={{this.id}}" class="text-decoration-none">
              <div class="related-product-card h-100 rounded-4 overflow-hidden shadow-sm border-0"
                style="transition: transform 0.3s ease, box-shadow 0.3s ease; cursor: pointer;">
                <div class="image-wrapper position-relative"
                  style="height: 220px; overflow: hidden; background-color: #f8f9fa;">
                  <img src="/static/{{this.thumbnail}}" alt="Related Product" class="w-100 h-100"
                    style="object-fit: cover;">
                  <div class="overlay"></div>
                </div>
                <div class="p-3">
                  <h6 class="fw-bold text-truncate mb-2 text-dark">{{this.name}}</h6>
                  <div class="d-flex justify-content-between align-items-center">
