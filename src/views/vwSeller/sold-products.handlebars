{{#section 'css'}}
<link rel="stylesheet" href="/static/css/seller/seller.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/seller/seller-rate.js"></script>
<script>
    $(document).ready(function () {
        SellerRate.init();
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        {{!-- LEFT SIDEBAR --}}
        <div class="col-lg-3 mb-4">
            {{> seller-sidebar activeSection='sold-products'}}
        </div>

        {{!-- RIGHT CONTENT --}}
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 h-100">

                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold text-success">
                        <i class="bi bi-check-circle-fill me-2"></i> SOLD PRODUCTS
                    </h5>
                    <p class="text-muted small mb-0 mt-2">View your successfully completed auctions</p>
                </div>

                {{> alerts}}

                {{> alerts}}

                <!-- Body -->
                <div class="card-body p-0" style="max-height: 600px; overflow-y: auto;">

                    {{#if empty}}
                    <div class="text-center py-5">
                        <div class="text-muted mb-3 opacity-50"><i class="bi bi-bag-check fs-1"></i></div>
                        <h6 class="text-muted fw-normal">No sold products yet.</h6>
                        <p class="text-muted small">Products that get sold will appear here!</p>
                    </div>
                    {{else}}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light text-secondary text-uppercase small">
                                <tr>
                                    <th scope="col" class="ps-4 py-3">Product Name</th>
                                    <th scope="col" class="py-3">Final Price</th>
                                    <th scope="col" class="py-3">Winner</th>
                                    <th scope="col" class="py-3">Total Bids</th>
                                    <th scope="col" class="py-3">Sold Date</th>
                                    <th scope="col" class="text-end pe-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                {{!-- Dữ liệu mẫu --}}
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/static/{{this.thumbnail}}" alt="{{this.name}}" width="50"
                                                height="50" class="rounded me-3" style="object-fit: cover;">
                                            <div>
                                                <div class="fw-bold text-dark">{{this.name}}</div>
                                                <div class="small text-muted">{{this.category_name}}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success fs-6">{{format_number this.current_price}}
                                            VND</span>
                                        <div class="small text-muted">Start: {{format_number this.starting_price}} VND
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2"
                                                style="width: 35px; height: 35px;">
                                                <i class="bi bi-trophy-fill"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold small">{{this.highest_bidder_name}}</div>
                                                <div class="text-muted" style="font-size: 0.75rem;">
                                                    {{this.highest_bidder_email}}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{this.bid_count}} bids</span>
                                    </td>
                                    <td>
                                        <div class="small">{{format_only_date this.closed_at}}</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">{{format_only_time
                                            this.closed_at}}</div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="/products/detail?id={{this.id}}"
                                            class="btn btn-sm btn-outline-info me-1" data-bs-toggle="tooltip"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        {{#if this.hasReview}}
                                        <button type="button" class="btn btn-sm btn-outline-primary btn-edit-rate"
                                            data-id="{{this.id}}" data-bidder="{{this.highest_bidder_name}}"
                                            data-bidder-id="{{this.highest_bidder_id}}"
                                            data-rating="{{this.reviewRating}}" data-comment="{{this.reviewComment}}"
                                            title="Edit Rating">
                                            <i class="bi bi-star-fill"></i>
                                        </button>
                                        {{else}}
                                        <button type="button" class="btn btn-sm btn-outline-primary btn-rate"
                                            data-id="{{this.id}}" data-bidder="{{this.highest_bidder_name}}"
                                            data-bidder-id="{{this.highest_bidder_id}}" title="Rate Bidder">
                                            <i class="bi bi-star"></i>
                                        </button>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{/if}}
                </div>

                <!-- Summary Stats -->
                <div class="card-footer bg-light border-top">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-2">
                                <h4 class="text-primary mb-1">{{stats.total_sold}}</h4>
                                <div class="small text-muted">Total Sold</div>
                            </div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="p-2">
                                <h4 class="text-success mb-1">{{format_number stats.total_revenue}} VND</h4>
                                <div class="small text-muted">Total Revenue</div>
                            </div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="p-2">
                                <h4 class="text-info mb-1">{{stats.total_bids}}</h4>
                                <div class="small text-muted">Total Bids</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>