{{#section 'css'}}
<link rel="stylesheet" href="/static/css/seller/seller.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/seller/seller-rate.js"></script>
<script src="/static/js/seller/seller-manage.js"></script>
<script>
    $(document).ready(function () {
        SellerRate.init();
        SellerManage.init();
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        {{!-- LEFT SIDEBAR --}}
        <div class="col-lg-3 mb-4">
            {{> seller-sidebar activeSection='pending-products'}}
        </div>

        {{!-- RIGHT CONTENT --}}
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 h-100">

                <!-- Header -->
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-hourglass-split me-2 text-warning"></i> PENDING PRODUCTS
                    </h5>
                    <p class="text-muted small mb-0 mt-2">Products awaiting payment from winners</p>
                </div>

                {{> alerts}}

                <!-- Body -->
                <div class="card-body p-0" style="max-height: 600px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light text-secondary text-uppercase small">
                                <tr>
                                    <th scope="col" class="ps-4 py-3">Product Name</th>
                                    <th scope="col" class="py-3">Final Price</th>
                                    <th scope="col" class="py-3">Winner</th>
                                    <th scope="col" class="py-3">Ended</th>
                                    <th scope="col" class="text-end pe-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/static/{{this.thumbnail}}" alt="{{this.name}}" width="50"
                                                height="50" class="rounded me-3" style="object-fit: cover;">
                                            <div>
                                                <div class="fw-bold text-dark">{{this.name}}</div>
                                                <div class="small text-muted">{{this.category_name}}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-warning fs-6">{{format_number this.current_price}}
                                            VND</span>
                                        <div class="small text-muted">Start: {{format_number this.starting_price}} VND
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold small">{{this.highest_bidder_name}}</div>
                                            <div class="text-muted" style="font-size: 0.75rem;">
                                                {{this.highest_bidder_email}}</div>
                                        </div>
                                    </td>
                                    <td>
                                        {{#if this.closed_at}}
                                        <div class="small">{{format_only_date this.closed_at}}</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">{{format_only_time
                                            this.closed_at}}</div>
                                        {{else}}
                                        <div class="small">{{format_only_date this.end_at}}</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">{{format_only_time
                                            this.end_at}}</div>
                                        {{/if}}
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="/products/detail?id={{this.id}}"
                                            class="btn btn-sm btn-outline-info me-1" data-bs-toggle="tooltip"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a href="/products/complete-order?id={{this.id}}"
                                            class="btn btn-sm btn-outline-success me-1" data-bs-toggle="tooltip"
                                            title="Complete Order">
                                            <i class="bi bi-clipboard-check"></i>
                                        </a>

                                        <button type="button" class="btn btn-sm btn-outline-danger btn-cancel"
                                            data-id="{{this.id}}" data-name="{{this.name}}"
                                            data-bidder-id="{{this.highest_bidder_id}}" title="Cancel">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Summary Stats -->
                <div class="card-footer bg-light border-top">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-2">
                                <h4 class="text-warning mb-1">{{stats.total_pending}}</h4>
                                <div class="small text-muted">Total Pending</div>
                            </div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="p-2">
                                <h4 class="text-warning mb-1">{{format_number stats.pending_revenue}} VND</h4>
                                <div class="small text-muted">Pending Revenue</div>
                            </div>
                        </div>
                        <div class="col-md-4 border-start">
                            <div class="p-2">
                                <h4 class="text-info mb-1">{{stats.total_bids}}</h4>
                                <div class="small text-muted">Total Bids</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>