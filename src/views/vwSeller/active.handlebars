{{!-- Modal for Append Description --}}
<div class="modal fade" id="appendDescModal" tabindex="-1" aria-labelledby="appendDescModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appendDescModalLabel">
                    <i class="bi bi-file-earmark-plus me-2"></i>Append Description
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Product:</label>
                    <p class="text-muted" id="modalProductName"></p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Additional Description:</label>
                    <div id="quill-editor-container" style="height: 300px;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-success" id="btnSaveAppendDesc">
                    <i class="bi bi-check-circle me-1"></i>Save & Append
                </button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal for Edit Description Updates --}}
<div class="modal fade" id="editUpdatesModal" tabindex="-1" aria-labelledby="editUpdatesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUpdatesModalLabel">
                    <i class="bi bi-pencil-square me-2"></i>Edit Description Updates
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editUpdatesBody" style="max-height: 70vh; overflow-y: auto;">
                <!-- Updates will be loaded here dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>