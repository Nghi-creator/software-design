{{#section 'css'}}
<!-- Quill CSS -->
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/static/css/seller/seller.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/seller/seller-manage.js"></script>
<script>
    $(document).ready(function () {
        SellerManage.init();
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        {{!-- LEFT SIDEBAR --}}
        <div class="col-lg-3 mb-4">
            {{> seller-sidebar activeSection='active-products'}}
        </div>

        {{!-- RIGHT CONTENT --}}
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 h-100">

                <!-- Header & Toolbar -->
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-play-circle-fill me-2 text-success"></i> ACTIVE PRODUCTS
                    </h5>
                    <a href="/seller/products/add" class="btn btn-primary btn-sm rounded-pill px-3">
                        <i class="bi bi-plus-lg me-1"></i> Add New Product
                    </a>
                </div>

                <!-- Body -->
                <div class="card-body p-0" style="max-height: 600px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light text-secondary text-uppercase small">
                                <tr>
                                    <th scope="col" class="ps-4 py-3">Product Name</th>
                                    <th scope="col" class="py-3">Current Price</th>
                                    <th scope="col" class="py-3">Bids</th>
                                    <th scope="col" class="py-3">End Time</th>
                                    <th scope="col" class="text-end pe-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/static/{{this.thumbnail}}" alt="{{this.name}}" width="50"
                                                height="50" class="rounded me-3" style="object-fit: cover;">
                                            <div>
                                                <div class="fw-bold text-dark">{{this.name}}</div>
                                                <div class="small text-muted">{{this.category_name}}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">{{format_number this.current_price}}
                                            VND</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{this.bid_count}}</span>
                                    </td>
                                    <td>
                                        <span class="small text-muted">{{format_date this.end_at}}</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="/products/detail?id={{this.id}}"
                                            class="btn btn-sm btn-outline-info me-1" data-bs-toggle="tooltip"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <button type="button"
                                            class="btn btn-sm btn-outline-success me-1 btn-append-desc"
                                            data-id="{{this.id}}" data-name="{{this.name}}" title="Append Description">
                                            <i class="bi bi-file-earmark-plus"></i>
                                        </button>

                                        <button type="button" class="btn btn-sm btn-outline-warning btn-edit-updates"
                                            data-id="{{this.id}}" data-name="{{this.name}}"
                                            title="Edit Description Updates">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

