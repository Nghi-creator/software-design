<div class="container mt-5 mb-5">
  <!-- Flash Messages -->
  {{> alerts}}

  <div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
      <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>404 - Page Not Found</h5>
    </div>
    <div class="card-body text-center py-5">
      <i class="bi bi-question-circle-fill text-warning" style="font-size: 5rem; opacity: 0.3;"></i>
      <h4 class="card-title mt-4 mb-3">Page Not Found</h4>
      <p class="card-text text-muted mb-4">The page you are looking for does not exist or has been moved.</p>
      <a href="/" class="btn btn-primary">
        <i class="bi bi-house-door me-2"></i>Return to Home
      </a>
    </div>
  </div>
</div>