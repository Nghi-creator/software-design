{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/auth/verify-otp.js"></script>
{{/section}}

{{#> auth-wrapper title="Verify OTP" subtitle="We have sent an OTP to <strong>{{email}}</strong>."}}
<!-- Form Verify -->
<form method="post" action="/account/verify-forgot-password-otp" id="formVerifyOtp">
  <input type="hidden" name="email" value="{{email}}">
  <div class="mb-3">
    <label class="form-label text-uppercase small">OTP Code</label>
    <input type="text" class="form-control form-control-lg text-center fw-bold letter-spacing-2" id="otp" name="otp"
      placeholder="XXXXXX" maxlength="6" autofocus>
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-dark text-uppercase">Verify</button>
  </div>
</form>

<!-- Form Resend OTP (Bổ sung tính năng này) -->
<div class="mt-4 text-center">
  <p class="text-muted small mb-1">Didn't receive the code?</p>
  <form method="post" action="/account/resend-forgot-password-otp" id="formResendOtp" class="d-inline">
    <input type="hidden" name="email" value="{{email}}">
    <button type="submit" class="btn btn-link text-decoration-none p-0 fw-bold">
      Resend OTP
    </button>
  </form>
</div>

<div class="mt-3 text-center">
  <a href="/account/signin" class="text-decoration-none text-muted small">
    <i class="bi bi-arrow-left"></i> Back to Sign in
  </a>
</div>
{{/auth-wrapper}}