{{#> auth-wrapper title="Verify email" subtitle="Enter the OTP we sent to <strong>{{email}}</strong>."}}
<!-- Form nhập OTP -->
<form method="post" action="/account/verify-email" class="mb-3">
  <input type="hidden" name="email" value="{{email}}">

  <div class="mb-3">
    <label for="otp" class="form-label text-uppercase small">OTP Code</label>
    <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter 6-digit OTP">
  </div>

  <div class="d-grid">
    <button type="submit" class="btn btn-dark text-uppercase">
      Verify
    </button>
  </div>
</form>

<!-- Nút Resend OTP -->
<form method="post" action="/account/resend-otp" class="text-center">
  <input type="hidden" name="email" value="{{email}}">

  <button type="submit" class="btn btn-link text-decoration-none p-0">
    Didn’t receive the code? <strong>Resend OTP</strong>
  </button>
</form>
{{/auth-wrapper}}