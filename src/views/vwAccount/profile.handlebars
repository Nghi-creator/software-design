{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/account/admin-profile.js"></script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        <div class="col-md-3 mb-4">
            {{> client-sidebar activeSection='profile'}}
        </div>

        <div class="col-md-9">
            {{> profile-form
            userData=user
            formAction="/account/profile?_method=PUT"
            accentColor="primary"
            showOAuth=true
            }}
        </div>

    </div>
</div>