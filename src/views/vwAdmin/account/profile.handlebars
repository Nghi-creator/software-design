{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/account/admin-profile.js"></script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        <!-- CỘT TRÁI: SIDEBAR -->
        <div class="col-md-3 mb-4">
            {{> admin-sidebar activeSection='profile'}}
        </div>

        <!-- CỘT PHẢI: NỘI DUNG FORM -->
        <div class="col-md-9">
            {{> profile-form
            userData=authUser
            formAction="/admin/profile?_method=PUT"
            accentColor="danger"
            showOAuth=false
            }}
        </div>

    </div>
</div>