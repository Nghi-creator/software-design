{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/admin/product.js"></script>
<script>
    $('.btn-delete').on('click', function (e) {
        e.preventDefault();
        confirmDeleteProduct($(this).data('id'), $(this).data('name'));
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-md-3 mb-4">
            {{> admin-sidebar activeSection='products'}}
        </div>

        <!-- CONTENT -->
        <div class="col-md-9">
            <div class="card shadow-sm border-0 h-100">

                <!-- Header & Toolbar -->
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-danger">
                        <i class="bi bi-box-seam-fill me-2"></i> MANAGE PRODUCTS
                    </h5>
                    <a href="/admin/products/add" class="btn btn-danger btn-sm rounded-pill px-3">
                        <i class="bi bi-plus-lg me-1"></i> Add New Product
                    </a>
                </div>

                <!-- Body -->
                <div class="card-body p-0">

                    <div class="m-3">
                        {{> alerts}}
                    </div>

                    {{#if empty}}
                    <div class="text-center py-5">
                        <div class="text-muted mb-3 opacity-50"><i class="bi bi-box-seam fs-1"></i></div>
                        <h6 class="text-muted fw-normal">No products found.</h6>
                    </div>
                    {{else}}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light text-secondary text-uppercase small">
                                <tr>
                                    <th scope="col" class="ps-4 py-3">Product Name</th>
                                    <th scope="col" class="py-3">Seller</th>
                                    <th scope="col" class="py-3">Current Price</th>
                                    <th scope="col" class="py-3">Highest Bidder</th>
                                    <th scope="col" class="text-end pe-4 py-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 text-primary rounded p-2 me-3">
                                                <i class="bi bi-box-seam-fill"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">{{name}}</div>
                                                <div class="small text-muted">ID: #{{id}}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">{{seller_name}}</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-success">{{format_number current_price}} VND</span>
                                    </td>
                                    <td>
                                        {{#if highest_bidder_name}}
                                        <span class="badge bg-warning text-dark">{{highest_bidder_name}}</span>
                                        {{else}}
                                        <span class="text-muted small">No bids yet</span>
                                        {{/if}}
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="/admin/products/detail/{{id}}" class="btn btn-sm btn-outline-info me-1"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a href="/admin/products/edit/{{id}}"
                                            class="btn btn-sm btn-outline-primary shadow-sm me-1" title="Edit Product">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <button type="button" class="btn btn-sm btn-outline-danger btn-delete shadow-sm"
                                            data-id="{{id}}" data-name="{{name}}" title="Delete Product">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Hidden form for delete --}}
<form id="formDelete" method="POST" action="/admin/products/delete" style="display: none;">
    <input type="hidden" name="id" id="txtDeleteId">
</form>